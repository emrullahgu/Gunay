# Backend Ayarları
PORT=3001
DB_PATH=./database/osos.db

# GUNAY Backend URL (Python script için)
BACKEND_URL=http://localhost:3001/api

# ============================================
# OSOS Web Portal Ayarları (ÖNERİLEN YÖNTEM)
# ============================================
# Dağıtım Şirketi: toroslar, baskent, ayedas, gedas, sedas
OSOS_DAGITIM_SIRKETI=toroslar

# OSOS Portal Kullanıcı Bilgileri
# Not: Bu bilgileri dağıtım şirketinden almanız gerekir
# Başvuru: https://toroslaredas.com.tr/osos veya 186 Çağrı Merkezi
OSOS_KULLANICI_ADI=your_username_here
OSOS_SIFRE=your_password_here
OSOS_SAYAC_NO=12345678

# ============================================
# EPİAŞ (Enerji Piyasaları İşletme A.Ş.)
# ============================================
# Türkiye geneli piyasa verileri için (Benchmark)
# Kayıt: https://seffaflik.epias.com.tr
# Not: Halka açık veriler için kullanıcı adı/şifre gerekmez
EPIAS_USERNAME=your_epias_username
EPIAS_PASSWORD=your_epias_password

# ============================================
# OSOS Alternatif Yöntemler
# ============================================

# Modbus TCP (Direkt sayaç erişimi)
OSOS_MODBUS_IP=192.168.1.100
OSOS_MODBUS_PORT=502

# MQTT
OSOS_MQTT_BROKER=192.168.1.100
OSOS_MQTT_PORT=1883
OSOS_MQTT_TOPIC=osos/measurements

# REST API
OSOS_API_URL=http://192.168.1.100/api
